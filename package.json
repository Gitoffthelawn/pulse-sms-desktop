{
  "name": "pulse-sms",
  "version": "v4.0.0",
  "description": "A native desktop implementation of Pulse",
  "main": "built/main.js",
  "scripts": {
    "build": "tsc && cp -r src/assets built/assets",
    "watch": "tsc -w",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "start": "yarn run build && electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder build",
    "postinstall": "electron-builder install-app-deps"
  },
  "repository": "https://github.com/klinker-apps/messenger-desktop",
  "keywords": [
    "pulse",
    "sms",
    "mms",
    "android",
    "messaging"
  ],
  "author": {
    "name": "Luke Klinker",
    "email": "luke@klinkerapps.com",
    "url": "luke.klinker.xyz"
  },
  "license": "Apache-2.0",
  "build": {
    "appId": "xyz.klinker.messenger",
    "productName": "Pulse SMS",
    "asar": true,
    "asarUnpack": [
      "**/dict/*"
    ],
    "artifactName": "pulse-sms-${version}-${arch}.${ext}",
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "build/icon.png",
      "type": "distribution"
    },
    "win": {
      "icon": "build/icon.png"
    },
    "linux": {
      "icon": "build",
      "category": "Utility"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "klinker-apps",
        "repo": "messenger-desktop",
        "releaseType": "draft"
      }
    ]
  },
  "devDependencies": {
    "@types/node": "^12.6.8",
    "electron": "6.0.0",
    "electron-builder": "21.2.0",
    "tslint": "^5.18.0",
    "typescript": "^3.5.3"
  },
  "dependencies": {
    "electron-hunspell": "^1.0.0-beta.10",
    "electron-json-storage": "3.1.0",
    "electron-settings": "3.1.4",
    "electron-updater": "4.1.2",
    "electron-window-state": "5.0.3",
    "https-proxy-agent": "2.2.1",
    "ws": ">=3.3.1"
  }
}
